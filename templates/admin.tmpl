{{template "top" .}}
<title>Admin Dashboard</title>
</head>

<body class="bg-gradient-to-br from-amber-100 via-orange-100 to-rose-100 min-h-screen">

    <div class="container mx-auto px-4 md:py-12">
        <div class="max-w-[95%] mx-auto">

            <!-- HEADER -->
            <div class="flex justify-between items-center mb-10">
                <div>
                    <h1 class="text-5xl font-extrabold text-gray-900 tracking-tight drop-shadow-sm">
                        üçï Pizza Tracker
                    </h1>
                    <p class="text-gray-700 text-lg mt-1">Track, manage, and update customer orders effortlessly.</p>
                </div>

                <div class="flex items-center gap-5 bg-white/60 px-5 py-3 rounded-2xl shadow backdrop-blur">
                    <span class="text-gray-800 font-semibold text-lg">
                        Welcome, {{.Username}}
                    </span>
                    <form action="/logout" method="POST">
                        <button type="submit"
                            class="px-5 py-2.5 bg-red-500 text-white text-sm rounded-xl hover:bg-red-600 
                                   active:scale-95 transition-all shadow-lg">
                            Logout
                        </button>
                    </form>
                </div>
            </div>

            <!-- CONTENT CARD -->
            <div
                class="bg-white/80 backdrop-blur-md rounded-3xl shadow-xl border border-white/30 overflow-hidden transition-all">

                <div class="p-8">
                    <div class="flex items-center mb-8 gap-3">
                        <h2 class="text-3xl font-bold text-gray-900">Active Orders</h2>

                        <button onclick="location.reload()"
                            class="text-gray-600 hover:text-gray-900 transition p-2 rounded-xl hover:bg-gray-100 shadow-sm">
                            üîÑ
                        </button>

                        <span id="lastFetched" class="text-sm text-gray-500 ml-4 font-medium"></span>

                        <span id="newOrdersBadge"
                            class="ml-4 text-xs font-bold text-white bg-red-500 rounded-full px-4 py-1.5 hidden shadow-md">
                            0 new orders
                        </span>
                    </div>

                    <!-- TABLE -->
                    <div class="w-full overflow-x-auto rounded-xl border border-gray-300 shadow-md">
                        <table class="w-full text-sm">
                            <thead class="bg-gray-100 border-b border-gray-300">
                                <tr>
                                    <th class="px-6 py-4 text-left font-semibold text-gray-700 uppercase text-xs">Order ID</th>
                                    <th class="px-6 py-4 text-left font-semibold text-gray-700 uppercase text-xs">Status</th>
                                    <th class="px-6 py-4 text-left font-semibold text-gray-700 uppercase text-xs">Name</th>
                                    <th class="px-6 py-4 text-left font-semibold text-gray-700 uppercase text-xs">Phone</th>
                                    <th class="px-6 py-4 text-left font-semibold text-gray-700 uppercase text-xs">Address</th>
                                    <th class="px-6 py-4 text-left font-semibold text-gray-700 uppercase text-xs">Pizzas</th>
                                    <th class="px-6 py-4 text-left font-semibold text-gray-700 uppercase text-xs">Actions</th>
                                </tr>
                            </thead>

                            <tbody class="bg-white divide-y divide-gray-200">
                                {{range .Orders}}
                                <tr class="hover:bg-gray-50 transition">
                                    <td class="px-6 py-4">
                                        <a href="/customer/{{.ID}}"
                                            class="text-blue-600 hover:text-blue-800 font-semibold hover:underline">
                                            {{.ID}}
                                        </a>
                                    </td>

                                    <td class="px-6 py-4 text-gray-800 font-medium">
                                        <span class="px-3 py-1 rounded-lg bg-gray-100 text-gray-700 shadow-sm">
                                            {{.Status}}
                                        </span>
                                    </td>

                                    <td class="px-6 py-4 text-gray-800">{{.CustomerName}}</td>
                                    <td class="px-6 py-4 text-gray-600">{{.Phone}}</td>
                                    <td class="px-6 py-4 text-gray-600">{{.Address}}</td>

                                    <td class="px-6 py-4">
                                        <div class="space-y-1">
                                            {{range $index, $pizza := .Items}}
                                            <div class="flex items-center gap-2">
                                                <span class="text-gray-400 font-semibold">#{{add $index 1}}</span>
                                                <span class="truncate">{{$pizza.Size}} {{$pizza.Pizza}}</span>
                                                {{if $pizza.Instructions}}
                                                <span class="size-4 text-gray-400 cursor-help"
                                                    title="{{$pizza.Instructions}}">‚ìò</span>
                                                {{end}}
                                            </div>
                                            {{end}}
                                        </div>
                                    </td>

                                    <td class="px-6 py-4">
                                        <div class="flex gap-3">

                                            <!-- UPDATE STATUS -->
                                            <form action="/admin/order/{{.ID}}/update" method="POST">
                                                <select name="status"
                                                    class="px-3 py-2 text-sm border border-gray-300 rounded-lg 
                                                           focus:ring-2 focus:ring-emerald-400 bg-white font-medium shadow-sm"
                                                    onchange="this.form.submit()">

                                                    {{$currentStatus := .Status}}
                                                    {{range $.Statuses}}
                                                    <option {{if eq . $currentStatus}} selected {{end}} value="{{.}}">
                                                        {{.}}
                                                    </option>
                                                    {{end}}
                                                </select>
                                            </form>

                                            <!-- DELETE BUTTON -->
                                            <form action="/admin/order/{{.ID}}/delete" method="POST">
                                                <button type="submit"
                                                    class="p-2 text-white bg-red-500 rounded-lg hover:bg-red-600 
                                                           active:scale-95 focus:ring-2 focus:ring-red-400 transition shadow"
                                                    onclick="return confirm('Are you sure you want to delete this order?')">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="size-5" fill="none"
                                                        viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                            stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                                    </svg>
                                                </button>
                                            </form>

                                        </div>
                                    </td>
                                </tr>
                                {{end}}
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const updateTime = () => `Last updated on: ${new Date().toLocaleString()}`
        const lastFetched = document.getElementById("lastFetched");
        const newOrdersBadge = document.getElementById("newOrdersBadge");

        lastFetched.textContent = updateTime();

        let newOrdersCount = 0;
        const eventSrc = new EventSource("/admin/notifications");

        eventSrc.onmessage = () => {
            newOrdersCount++;
            newOrdersBadge.textContent = `${newOrdersCount} new order${newOrdersCount === 1 ? '' : 's'}`;
            newOrdersBadge.classList.remove("hidden");
            lastFetched.textContent = updateTime();
        }

        eventSrc.onerror = err => console.error("EventSource failed:", err);
    });
</script>

{{template "bottom" .}}
